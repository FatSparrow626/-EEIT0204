{
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  "compilerOptions": {
    "baseUrl": ".",                
    "paths": {
      "@/*": ["src/*"]            
    },
    "skipLibCheck": true          
  },

  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],

  "exclude": ["src/**/__tests__/*"]
}
